<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
</head>
<style>
    #chat{
        max-height: 500px;
        min-height: 500px;
        background-color: aquamarine;
        overflow-y: scroll;
    }
</style>
<body>
        <h1>Chat OIN</h1>
        <div id="chat">

        </div>
        <br><br>
        <input type="text" id="msg" class="form-control" placeholder="Msg...">
        <input type="text" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control">
        <hr>
        <div class="d-grid gap-2">
        <button onclick="enviar()" class="btn btn-success">Enviar</button>
        </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js"></script>
<script>
    var socket = io("http://localhost:3000");
    socket.emit("disconnected",()=>{
        console.log("Desconectado");
    });
    socket.on("showmsg",(data)=>{
        console.log(data);
        var chat = document.getElementById("chat");
        var p = document.createElement("p");
        p.innerHTML = data.username + ": " + data.msg;
        chat.append(p);
    });
    function enviar(){
        var msgField = document.getElementById("msg").value;
        var usernameField = document.getElementById("username").value;
        socket.emit("msg",{msg:msgField,username:usernameField});
    }
</script>
</html>

