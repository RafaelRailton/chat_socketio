<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
        <h1>Chat</h1>
        <div id="chat">

        </div>
        <br><br>
        <input type="text" id="msg">
        <input type="text" id="username" placeholder="Seu nome de usuÃ¡rio">
        <hr>
        <button onclick="enviar()">Enviar</button>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js"></script>
<script>
    var socket = io("http://localhost:3000");
    socket.emit("disconnect",()=>{
        console.log("Desconectado");
    });
    socket.on("showmsg",(data)=>{
        console.log(data);
    });
    function enviar(){
        var msgField = document.getElementById("msg").value;
        var usernameField = document.getElementById("username").value;
        socket.emit("msg",{msg:msgField,username:usernameField});
    }
</script>
</html>

